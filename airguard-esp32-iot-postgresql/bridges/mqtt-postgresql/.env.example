# MQTT Configuration
MQTT_BROKER=mqtt://127.0.0.1:1883
MQTT_TOPIC=espnow/samples
MQTT_CLIENT_ID=airguard-mqtt-bridge
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_QOS=1

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=airguard
PG_USER=airguard_user
PG_PASSWORD=airguard_password
